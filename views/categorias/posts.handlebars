<h1>{{category.nome}}</h1>
{{#each posts}}
<div class="card mt-4 mb-4">
  <div class="card-body">   
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-primary btn-md col-md-3" >Leia mais</button></a>
    <hr>
    <small>Data de publicação: {{data}}</small>
  </div>
</div>
{{else}}
<h5>Nenhuma Postagem</h5>
{{/each}}