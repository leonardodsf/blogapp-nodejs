<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/category/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categories}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small>
      <br>
      <small>Data de Criação: {{date}}</small><br>
      <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-warning mt-4 col-md-3">Editar Categoria</button></a>
      <form action="/admin/categories/delete" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2 col-sm-3">Exluir Categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-4">Nenhuma categoria registrada!</h4>
{{/each}}