{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Editar Postagem: </h4>
    <form action="/admin/postagem/edit" method="POST">
    <input type="hidden" value="{{posts._id}}" name="id">
      <label for="titulo">Título: </label>
        <input type="text" name="titulo" class="form-control" value="{{posts.titulo}}" required>
      <label for="slug"> Slug: </label>
        <input type="text" name="slug" class="form-control" value="{{posts.slug}}"required>
      <label for="descricao">Descricao: </label>
        <input type="text" name="descricao" class="form-control" value="{{posts.descricao}}" required>
      <label for="conteudo">Conteúdo: </label>
        <textarea name="conteudo" class="form-control" required>{{posts.conteudo}}</textarea>
      <label for="category">Categoria: </label>
        <select name="category" class="custom-select">
        {{#each categories}}
            <option value="{{_id}}">{{nome}}</option>
          {{else}}
            <option value="0">Nenhuma categoria registrada</option>
          {{/each}}
        </select>
      <button class="btn btn-warning mt-3 col-md-3" type="submit">Editar Postagem</button>
    </form>
  </div>
</div>