<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success mb-4">Nova Postagem</button></a>
{{#each posts}}
  <div class="card mt-3">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{data}}</small><br>
      <small>Categoria: {{category.nome}}</small><br>
      <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-warning mt-3">Editar postagem</button></a> 
      <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-3">Excluir postagem</button></a>         
    </div>
  </div>
{{else}}
<p>Nenhuma postagem registrada</p>
{{/each}}